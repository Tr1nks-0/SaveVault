<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:labelFor="@+id/multilineEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/titleForMultilineEditText"
                android:layout_weight="1"
                android:textSize="@dimen/field_text_view_text_size"
                />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_delete"
                android:id="@+id/deleteFieldImageButton"
                android:contentDescription="@string/fields_cont_descr_del_img_button"/>
    </LinearLayout>


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="@dimen/field_edit_text_text_size"
            android:hint="@string/fields_multiline_text_hint"
            android:id="@+id/multilineEditText"
            />
</LinearLayout>